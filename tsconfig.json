{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "target": "es2017",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": false,
    "experimentalDecorators": true,
    "noImplicitReturns": false,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false
  },
  "rules": {
    "curly": [false, "same-line-multi-line"]
  },
  "exclude": ["node_modules"]
}
